@model List<Brand>

<div class="container">
	<div class="row p-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Brand List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Brand" asp-action="Create" class="btn btn-primary" style="border-radius:8px">
				<i class="bi bi-plus-circle"></i> Create New Brand
			</a>
		</div>
	</div>
</div>



<table class="table table-striped table-bordered" id="myTable">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Name</th>
			<th scope="col">Description</th>
			<th scope="col"></th>
		</tr>
	</thead>
</table>
@section Scripts{
	<script src="~/js/Brand.js"></script>
}
