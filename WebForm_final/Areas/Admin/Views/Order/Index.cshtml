@{
	var status = Context.Request.Query["status"];
	var pending = "text-primary";
	var inprocess = "text-primary";
	var completed = "text-primary";
	var approved = "text-primary";
	var all = "text-primary";

	switch (status)
	{
		case "pending":
			pending = "active text-white bg-primary";
			break;
		case "inprocess":
			inprocess = "active text-white bg-primary";
			break;
		case "completed":
			completed = "active text-white bg-primary";
			break;
		case "approved":
			approved = "active text-white bg-primary";
			break;
		default:
			all = "active text-white bg-primary";
			break;

	}

}

<div class="container">
	<div class="row p-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Order List
			</h2>
		</div>
	</div>
</div>

<div class="card-body p-1">
	<div class="d-flex justify-content-between pb-4 pt-2">
		<span></span>
		<ul class="list-group list-group-horizontal-sm">
			<a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
			<li class="list-group-item @inprocess" style="border-radius: 8px">In Process</li>
			</a>
			<a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="pending">
			<li class="list-group-item @pending" style="border-radius: 8px">Pending</li>
			</a>
			<a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="completed">
			<li class="list-group-item @completed" style="border-radius: 8px">Completed</li>
			</a>
			<a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="approved">
			<li class="list-group-item @approved" style="border-radius: 8px">Approved</li>
			</a>
			<a style="text-decoration:none; border-radius: 8px" asp-controller="Order" asp-action="Index" asp-route-status="all">
			<li class="list-group-item @all" style="border-radius: 8px">All</li>
			</a>
		</ul>
	</div>
</div>
<table class="table table-striped table-bordered" id="myTable">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Name</th>
			<th scope="col">Phone Number</th>
			<th scope="col">Email</th>
			<th scope="col">Date</th>
			<th scope="col">Total</th>
			<th scope="col">Status</th>
			<th scope="col">Payment Status</th>
			<th scope="col">Payment Type</th>
			<th scope="col"></th>
		</tr>
	</thead>
</table>
@section Scripts{
	<script src="~/js/Order.js"></script>
}
