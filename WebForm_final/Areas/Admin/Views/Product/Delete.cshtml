@model Product

<form method="post">
	<input type="hidden" asp-for="id" />  @*// Help object find the correct record to delete with the id*@
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary text-center">Delete Product</h2>
		</div>
		<div class="mb-3">
			<label asp-for="name"></label>
			<input asp-for="name" disabled class="form-control" />
			<span asp-validation-for="name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="model"></label>
			<input asp-for="model" disabled disabled class="form-control" />
			<span asp-validation-for="model" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="price"></label>
			<input asp-for="price" disabled class="form-control" />
			<span asp-validation-for="price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="description"></label>
			<input asp-for="description" disabled class="form-control" />
			<span asp-validation-for="description" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control border">
					Back to List
				</a>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{
		<partical name="_ValidationScriptsPartial" />
	}
}
