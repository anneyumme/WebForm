@model List<Brand>


<div class="container">
	<div class="row p-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Brand" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>
</div>



<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th scope="col">Id</th>
			<th scope="col">Name</th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.name</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Brand" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i> Delete
						</a>
					</div>
				</td>
			</tr>

		}
	</tbody>
</table>